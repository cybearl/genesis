{
    "name": "server",
    "version": "2023.5.0",
    "description": "GENESIS::SERVER",
    "repository": "https://github.com/yoratoni/genesis.git",
    "author": "yoratoni <yoratoni.dev@gmail.com>",
    "license": "MIT",
    "private": true,
    "scripts": {
        "start": "ts-node src/scripts/main.ts",
        "generate": "ts-node src/scripts/generate.ts",
        "score": "ts-node src/scripts/score.ts",
        "test": "mocha --exit --timeout 65000 --require node_modules/ts-node/register src/tests/*.test.ts",
        "test:coverage": "nyc yarn test"
    },
    "dependencies": {
        "@types/minimist": "^1.2.2",
        "ccxt": "^3.0.86",
        "date-and-time": "^3.0.0",
        "dotenv": "^16.0.3",
        "lodash": "^4.17.21",
        "minimist": "^1.2.8",
        "mongodb": "^5.3.0",
        "node-os-utils": "^1.3.7",
        "speedtest-net": "^2.2.0",
        "ts-node": "^10.9.1",
        "winston": "^3.8.2"
    },
    "devDependencies": {
        "@istanbuljs/nyc-config-typescript": "^1.0.2",
        "@total-typescript/ts-reset": "^0.4.2",
        "@types/chai": "^4.3.5",
        "@types/lodash": "^4.14.194",
        "@types/mocha": "^10.0.1",
        "@types/node": "^18.16.3",
        "@types/node-os-utils": "^1.3.1",
        "@types/speedtest-net": "^2.1.1",
        "@typescript-eslint/eslint-plugin": "^5.59.2",
        "@typescript-eslint/parser": "^5.59.2",
        "chai": "^4.3.7",
        "eslint": "^8.39.0",
        "eslint-import-resolver-typescript": "^3.5.5",
        "eslint-plugin-import": "^2.27.5",
        "mocha": "^10.2.0",
        "nyc": "^15.1.0",
        "ts-node": "^10.9.1",
        "tsconfig-paths": "^4.2.0",
        "typescript": "^5.0.4"
    },
    "nyc": {
        "extends": "@istanbuljs/nyc-config-typescript",
        "all": true,
        "check-coverage": true,
        "branches": 0,
        "lines": 0,
        "functions": 0,
        "statements": 0,
        "include": [
            "src/**/!(*.test.*).[tj]s?(x)"
        ],
        "exclude": [
            "src/**/*.test.ts"
        ],
        "reporter": [
            "html",
            "lcov",
            "text",
            "text-summary"
        ],
        "report-dir": "coverage"
    }
}
